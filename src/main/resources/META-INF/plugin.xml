<idea-plugin>
  <id>org.jetbrains.debugger.streams</id>
  <name>Java Streams Debugger</name>
  <version>0.0.4</version>
  <vendor url="https://www.jetbrains.com">JetBrains</vendor>

  <description><![CDATA[
